#:kivy 1.11.1

<DSLabel>:
    markup: True
    canvas.before:
        Color:
            rgba:(0, .1, .1, 1) if self.selected else (0, 0, 0, 1)
        Rectangle:
            pos: self.pos
            size: self.size

<DSSelection>:
    viewclass: "DSLabel"
    item_container: item_container
    
    SelectableRecycleBoxLayout:
        id: item_container
        default_size: None, dp(56)
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height
        orientation: "vertical"

<DSTextInput@TextInput>:
    hint_text: "Name des Patienten"
    size_hint: 1, 0.2
    font_size: self.height * 0.6
    cursor_color: 1, 1, 1, 1
    write_tab: False
    multiline: False

<DynamicSearch@BoxLayout>:
    
    orientation: "vertical"
    size_hint: 0.9, 0.5
    spacing: 10
    text_input: text_input
    selection: selection
    item_container: selection.item_container

    Label:
        text: "PATIENT SUCHEN"
        font_size: 27
        text_size: self.size
        halign: "center"
        valign: "bottom"

    DSTextInput:
        id: text_input

    DSSelection:
        id: selection