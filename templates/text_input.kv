#:kivy 1.11.1

<StdFormInput@TextInput>:
    cursor_color: .1, .1, .1, 1
    multiline: False
    write_tab: False
    size_hint: 0.7, 0.2
    font_size: self.height * 0.5

<PatientFormInput@StdFormInput, PatientSpinner@Spinner, PatientFormLabel@StdFormLabel>:
    size_hint: 1, 0.6
    font_size: self.height * 0.5